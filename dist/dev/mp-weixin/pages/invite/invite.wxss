
.invite-wrapper {
  display: flex;
  padding: 20px;
  flex-direction: column;
  align-items: center;
}
.invite-qrcode {
  border-radius: 10px;
  box-shadow: rgba(0, 0, 0, 0.1) 0px 0px 10px 1px;
  overflow: hidden;
}
.share-btn {
  display: flex;
  flex-direction: row;
  padding: 20px 0px 10px 0px;
}
.share-btn button {
  flex: 1;
  margin: 0px 10px;
  border-radius: 40px;
}

